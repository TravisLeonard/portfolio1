  "devDependencies": {
    "concurrently": "^8.2.0",
    "jshint": "^2.13.6",
    "lite-server": "^2.6.1",
    "mocha": "^10.2.0",
    "node-sass": "^9.0.0",
    "uglify-js": "^3.17.4"
  }
